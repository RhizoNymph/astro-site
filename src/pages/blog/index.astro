---
// src/pages/blog/index.astro
// Simplified for workaround - no content collection fetching
import BaseLayout from '../../layouts/BaseLayout.astro';

// Manually list blog posts here
const posts = [
    { slug: "first-post", title: "My First Blog Post", pubDate: "2024-03-31", description: "Setting up the blog section..." },
    // Add future posts here
];
---
<BaseLayout title="Blog">
    <h1>Blog</h1>
    <p>Welcome to my blog! Here I'll share thoughts, updates, and tutorials.</p>

    <h2>Posts:</h2>
    {posts.length === 0 ? (
        <p>No blog posts yet. Check back soon!</p>
    ) : (
        <ul>
            {posts.map((post) => (
                <li>
                    {/* Link directly to the .astro page */}
                    <a href={`/blog/${post.slug}/`}>{post.title}</a>
                    <p class="post-meta">
                        <span>Published on {post.pubDate}</span>
                    </p>
                    {post.description && <p class="description">{post.description}</p>}
                </li>
            ))}
        </ul>
    )}
</BaseLayout>

<style>
    ul {
        list-style: none;
        padding: 0;
    }
    li {
        margin-bottom: 1em;
    }
    li a {
        color: #a7d1ff; /* Example link color */
        text-decoration: none;
    }
    li a:hover {
        text-decoration: underline;
    }
    .post-meta {
        font-size: 0.8em;
        color: #ccc;
        margin-top: 0.2em;
    }
    .tags {
        font-style: italic;
    }
    .description {
        margin-top: 0.5em;
        font-size: 0.9em;
    }
</style> 