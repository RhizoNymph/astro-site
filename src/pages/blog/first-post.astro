---
// src/pages/blog/first-post.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
// Import the Markdown content
import { Content } from './first-post.md';

const title = "My First Blog Post";
const pubDate = "2024-03-31";
const tags = ["astro", "blogging", "webdev"]; // Keep metadata here
---
<BaseLayout title={title}>
    <article class="blog-post">
        <h1>{title}</h1>
        <p class="post-meta">
            <span>Published on {pubDate}</span>
            {/* Render tags from frontmatter */}
            {tags && <span class="tags"> | Tags: {tags.join(', ')}</span>}
        </p>
        <hr>
        <div class="post-content">
            {/* Render the imported Markdown content */}
            <Content />
        </div>
    </article>
</BaseLayout>

<!-- Reuse styles from the deleted [...slug].astro or define new ones -->
<style>
    .blog-post {
        max-width: 800px;
        margin: 0 auto;
    }
    .post-meta {
        font-size: 0.9em;
        color: #ccc;
        margin-bottom: 1em;
    }
    .tags {
        font-style: italic;
    }
    hr {
        border: 0;
        height: 1px;
        background: #444;
        margin: 1.5em 0;
    }
    .post-content {
        line-height: 1.7;
    }
    .post-content h2 {
        font-size: 1.4em;
        margin-top: 1.5em;
        margin-bottom: 0.5em;
        border-bottom: 1px solid #555;
        padding-bottom: 0.2em;
    }
    .post-content p {
        margin-bottom: 1em;
    }
    .post-content ul, .post-content ol {
        list-style: initial;
        margin-left: 1.5em;
        margin-bottom: 1em;
    }
    /* Add back code/pre styles if Markdown might use them */
    .post-content code {
        background-color: #3a3a3a;
        padding: 0.2em 0.4em;
        border-radius: 3px;
        font-size: 0.9em;
    }
    .post-content pre {
        background-color: #2a2a2a;
        padding: 1em;
        border-radius: 4px;
        overflow-x: auto;
        margin-bottom: 1em;
    }
    .post-content pre code {
        background-color: transparent;
        padding: 0;
        font-size: inherit;
    }
</style> 