---
<div class="art-grid-container">
    <h2>Art Showcase</h2>
    <div class="art-grid">
        {artItems.map(item => (
            <a href={item.href} target="_blank" rel="noopener noreferrer" class="art-item">
                <img src={item.src} alt={item.alt} class="art-item__img">
                <div class="art-item__caption">{item.alt}</div>
            </a>
        ))}
    </div>
</div>

<style>
    .art-grid-container {
        margin-bottom: 30px; /* Add some space below */
        text-align: center; /* Center the heading */
    }
    .art-grid-container h2 {
        margin-bottom: 20px;
    }
    .art-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Responsive grid */
        gap: 20px; /* Space between grid items */
        padding: 10px;
    }
    .art-item {
        position: relative; /* For caption positioning */
        display: block; /* Make the link a block element */
        border: 1px solid #444; /* Optional: Add border */
        border-radius: 5px;
        overflow: hidden; /* Keep caption inside */
        background-color: #333; /* Background for the item */
        transition: transform 0.2s ease-in-out;
    }
    .art-item:hover {
        transform: scale(1.03); /* Slight zoom on hover */
    }
    .art-item__img {
        display: block;
        width: 100%;
        height: 200px; /* Fixed height for consistency */
        object-fit: contain; /* Show the whole image, scaled down */
        background-color: #222; /* Darker background for image area */
    }
    .art-item__caption {
        padding: 8px;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        text-align: center;
        font-size: 0.9em;
        /* Position caption at the bottom */
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        opacity: 0; /* Hide caption by default */
        transition: opacity 0.3s ease;
    }
    .art-item:hover .art-item__caption {
        opacity: 1; /* Show caption on hover */
    }
</style>

